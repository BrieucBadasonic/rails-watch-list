<div class="container">
  <h1 class="text-center mt-5">Movies List</h1>
  <hr>
  <% @movies.each do |movie| %>
    <div class="movie-card">
      <h2><%= movie.title %> - rating: <%= movie.rating %></h2>
      <p><%= movie.overview %></p>
      <img src="<%= movie.poster_url %>" alt="">
    </div>
  <% end %>
</div>
